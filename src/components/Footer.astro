---
import SocialIcons from "./social/SocialIcons.astro";
import { SITE_TITLE } from "../consts";
---

<footer>
    <div class="mt-16 flex flex-col items-center">
        <div class="mb-3 flex space-x-4">
            <SocialIcons icon_type="instagram" />
            <SocialIcons icon_type="mail" />
            <SocialIcons icon_type="github" />
            <SocialIcons icon_type="rss" />
        </div>
        <div
            class="mb-2 flex space-x-2 text-sm text-gray-500 dark:text-gray-400"
        >
            <div>{`© ${new Date().getFullYear()}`}</div>
            <div>{` • `}</div>
            <a href="/">{SITE_TITLE}</a>
        </div>
        <div class="mb-8 text-sm text-gray-500 dark:text-gray-400">
            Powered by{` `}
            <a class={"underline"} href="https://astro.build">Astro</a>
            {` `}&{` `}
            <a class={"underline"} href="https://tailwindcss.com">
                TailwindCSS
            </a>
        </div>
    </div>
</footer>
